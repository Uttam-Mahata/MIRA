# MIRA Environment Configuration
# Copy this file to .env and fill in the values

# Application Settings
APP_NAME=MIRA
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Server Settings
HOST=0.0.0.0
PORT=8000

# Datadog Settings
# Get your keys from: Organization Settings -> API Keys / Application Keys
DATADOG_API_KEY=your_datadog_api_key
DATADOG_APP_KEY=your_datadog_app_key
DATADOG_SITE=datadoghq.com

# Azure DevOps Settings
# Create a PAT at: User Settings -> Personal Access Tokens
AZURE_DEVOPS_PAT=your_azure_devops_pat
AZURE_DEVOPS_ORGANIZATION_URL=https://dev.azure.com/your-organization
AZURE_DEVOPS_ORGANIZATION=your-organization

# Google ADK / LLM Settings
# Get your API key from: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key
LLM_MODEL=gemini-2.0-flash

# MCP Integration Settings
# Enable/disable MCPToolset for direct MCP server integration
USE_MCP_TOOLSET=true

# Datadog MCP Server URL (for HTTP-based integration)
# If using the Datadog MCP server, set this to the server URL
# Supports multiple services - the agent can query across all services
# DATADOG_MCP_SERVER_URL=http://localhost:3001/mcp

# GitHub Personal Access Token (for GitHub MCP integration)
# Required for code search and repository analysis via GitHub Copilot MCP
# GITHUB_PERSONAL_ACCESS_TOKEN=your_github_pat

# Service Registry
SERVICE_REGISTRY_PATH=config/service_registry.json

# Webhook Security (optional)
# Set this to validate Datadog webhook signatures
WEBHOOK_SECRET=your_webhook_secret

# Notification Settings
# Microsoft Teams incoming webhook URL for incident notifications
# Create at: Teams > Channel > Connectors > Incoming Webhook
# TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/your-webhook-url

# Google Chat Space webhook URL for incident notifications
# Create at: Space > Apps & Integrations > Webhooks
# GOOGLE_SPACE_WEBHOOK_URL=https://chat.googleapis.com/v1/spaces/your-space/messages?key=your-key

# Ticket Creation Settings
# Automatically create Azure DevOps work items for incidents
AUTO_CREATE_TICKETS=true
# Default work item type for incident tickets (Bug, Task, Issue)
DEFAULT_WORK_ITEM_TYPE=Bug
